<Window x:Class="Blockchain.Miner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blockchain"
        mc:Ignorable="d"
        Title="Miner" Height="600" Width="603">
    <Grid Background="Black">
        <RichTextBox x:Name="ConsoleOutput" HorizontalAlignment="Left" Height="519" 
                     VerticalAlignment="Top" Width="595" Background="Black" Foreground="Lime" BorderBrush="{x:Null}" 
                     SelectionBrush="{x:Null}" FontSize="14" FontFamily="Consolas">
        </RichTextBox>
        <TextBox x:Name="speedWindow" HorizontalAlignment="Center" Height="50"
                 TextWrapping="Wrap" VerticalAlignment="Center" Width="595" Background="Black" BorderBrush="{x:Null}" 
                 Foreground="Lime" SelectionBrush="{x:Null}" FontSize="18" FontFamily="Consolas" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,519,0,0"/>

    </Grid>
</Window>
